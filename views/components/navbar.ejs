<!--
    NAVIGATION BAR COMPONENT
    ========================
    
    Purpose: Main navigation component for the WanderLust application
    Features:
    - Responsive Bootstrap navbar with mobile hamburger menu
    - Dynamic authentication states (logged in vs logged out)
    - Brand logo with compass icon
    - User dropdown menu with profile options
    - Conditional navigation links based on user authentication
    
    Authentication Logic:
    - Checks for 'currentUser' variable from server-side session
    - Shows different navigation options based on login status
    - Includes logout functionality via form submission
    
    Styling:
    - Sticky top navigation that stays visible on scroll
    - White background with subtle shadow
    - Primary brand colors and consistent iconography
-->
<nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm sticky-top">
    <div class="container">
        <!-- BRAND LOGO AND NAME -->
        <!-- Links to homepage with compass icon representing travel/exploration -->
        <a class="navbar-brand fw-bold text-primary fs-3" href="/">
            <i class="fa-regular fa-compass me-2"></i>WanderLust
        </a>
        
        <!-- MOBILE MENU TOGGLE BUTTON -->
        <!-- Bootstrap collapse toggle for responsive mobile navigation -->
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
            aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        
        <!-- COLLAPSIBLE NAVIGATION CONTENT -->
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            
            <!-- MAIN NAVIGATION LINKS (Left Side) -->
            <div class="navbar-nav me-auto">
                <!-- Home Page Link -->
                <a class="nav-link fw-semibold" href="/">
                    <i class="fas fa-home me-1"></i>Home
                </a>
                
                <!-- All Listings Page Link -->
                <a class="nav-link fw-semibold" href="/listings">
                    <i class="fas fa-list me-1"></i>All Listings
                </a>
                
                <!-- CONDITIONAL LINK: Add Listing (Only for authenticated users) -->
                <% if (typeof currentUser !== 'undefined' && currentUser) { %>
                    <a class="nav-link fw-semibold" href="/listings/new">
                        <i class="fas fa-plus me-1"></i>Add Listing
                    </a>
                <% } %>
            </div>

            <!-- AUTHENTICATION SECTION (Right Side) -->
            <div class="navbar-nav">
                <!-- 
                    CONDITIONAL RENDERING: Check if user is authenticated
                    currentUser variable is passed from server-side session
                -->
                <% if (typeof currentUser !== 'undefined' && currentUser) { %>
                    
                    <!-- AUTHENTICATED USER: Dropdown Menu -->
                    <div class="nav-item dropdown">
                        <!-- User Avatar and Name Trigger -->
                        <a class="nav-link dropdown-toggle fw-semibold d-flex align-items-center" href="#" role="button"
                            data-bs-toggle="dropdown" aria-expanded="false">
                            <!-- User Avatar Circle -->
                            <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2"
                                style="width: 35px; height: 35px;">
                                <i class="fas fa-user"></i>
                            </div>
                            <!-- Display username, email, or fallback to 'User' -->
                            <%= currentUser.username || currentUser.email || 'User' %>
                        </a>
                        
                        <!-- Dropdown Menu Items -->
                        <ul class="dropdown-menu dropdown-menu-end shadow rounded-3">
                            <!-- User Profile -->
                            <li>
                                <a class="dropdown-item py-2" href="/listings">
                                    <i class="fas fa-user-circle me-2 text-primary"></i>My Profile
                                </a>
                            </li>
                            
                            <!-- User's Listings -->
                            <li>
                                <a class="dropdown-item py-2" href="/listings">
                                    <i class="fas fa-building me-2 text-success"></i>My Listings
                                </a>
                            </li>
                            
                            <!-- User's Bookings -->
                            <li>
                                <a class="dropdown-item py-2" href="/listings">
                                    <i class="fas fa-calendar-check me-2 text-info"></i>My Bookings
                                </a>
                            </li>
                            
                            <!-- Divider -->
                            <li><hr class="dropdown-divider"></li>
                            
                            <!-- Settings -->
                            <li>
                                <a class="dropdown-item py-2" href="/listings">
                                    <i class="fas fa-cog me-2 text-secondary"></i>Settings
                                </a>
                            </li>
                            
                            <!-- Logout Button -->
                            <li>
                                <!-- Form submission for logout (GET request to /auth/logout) -->
                                <form action="/auth/logout" method="GET" class="d-inline">
                                    <button type="submit" class="dropdown-item py-2 text-danger">
                                        <i class="fas fa-sign-out-alt me-2"></i>Logout
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
                    
                <% } else { %>
                    
                    <!-- UNAUTHENTICATED USER: Login and Signup Links -->
                    <!-- Login Link -->
                    <a class="nav-link fw-semibold me-2" href="/auth/login">
                        <i class="fas fa-sign-in-alt me-1"></i>Login
                    </a>
                    
                    <!-- Signup Button (Styled as primary button) -->
                    <a class="btn btn-primary rounded-pill px-3 py-2" href="/auth/signup">
                        <i class="fas fa-user-plus me-1"></i>Sign Up
                    </a>
                    
                <% } %>
            </div>
        </div>
    </div>
</nav>