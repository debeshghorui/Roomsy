<!--
    BOILERPLATE LAYOUT TEMPLATE
    ===========================
    
    Purpose: Main layout template that wraps all pages in the application
    Usage: Used by all pages via layout('layouts/boilerplate')
    
    Structure:
    - HTML5 document with responsive meta tags
    - External CSS/JS dependencies (Bootstrap, Font Awesome)
    - Common components (navbar, flash messages, footer)
    - Dynamic content area for page-specific content
    
    Dependencies:
    - Bootstrap 5.3.3 (CSS Framework)
    - Font Awesome 6.4.0 (Icons)
    - Custom CSS files (styles.css, rating.css)
    
    Layout Features:
    - Responsive design with mobile-first approach
    - Sticky footer using flexbox
    - Flash message system for user feedback
    - Consistent branding and navigation
-->
<!DOCTYPE html>
<html lang="en">
    <head>
        <!-- Basic HTML5 meta tags for responsive design -->
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        
        <!-- Favicon - Compass icon representing travel/navigation -->
        <link rel="icon" type="image/x-icon" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.7.2/icons/compass.svg">
        
        <!-- External CSS Dependencies -->
        <!-- Bootstrap CSS - Main UI framework for responsive design -->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <!-- Font Awesome - Icon library for UI icons -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
        
        <!-- Custom Application Styles -->
        <link rel="stylesheet" href="/css/styles.css">      <!-- Main custom styles -->
        <link rel="stylesheet" href="/css/rating.css">     <!-- Star rating component styles -->
        
        <!-- Page Title - Static for now, could be dynamic per page -->
        <title>TripNest</title>
    </head>

    <!-- 
        Body Layout:
        - d-flex flex-column: Creates vertical flexbox layout
        - min-vh-100: Ensures full viewport height
        This setup enables sticky footer behavior
    -->
    <body class="d-flex flex-column min-vh-100">
        
        <!-- NAVIGATION BAR -->
        <!-- Includes the main navigation component with user authentication states -->
        <%- include('../components/navbar') %>
        
        <!-- CATEGORY FILTERS -->
        <!-- Airbnb-style category filters bar -->
        <%- include('../components/filters') %>
        
        <!-- FLASH MESSAGES -->
        <!-- System for displaying success/error messages to users -->
        <%- include('../components/flash') %>

        <!-- MAIN CONTENT AREA -->
        <!-- 
            flex-grow-1: Takes up remaining space between navbar and footer
            body: EJS placeholder where page-specific content is injected
        -->
        <main class="flex-grow-1">
            <%- body %>
        </main>

        <!-- FOOTER -->
        <!-- Site-wide footer with links, contact info, and social media -->
        <%- include('../components/footer') %>

        <!-- JavaScript Dependencies -->
        <!-- Bootstrap Bundle - Includes Popper.js for dropdowns, tooltips, etc. -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
        
        <!-- Custom Interactions -->
        <script src="/javascript/interactions.js"></script>
    </body>
</html>