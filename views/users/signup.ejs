<% layout('layouts/boilerplate') %>

<style>
.auth-page {
    min-height: 80vh;
    display: flex;
    align-items: center;
    background: var(--airbnb-light-gray);
}

.auth-card {
    background: white;
    border: 1px solid var(--airbnb-border);
    border-radius: 12px;
    max-width: 480px;
    margin: 0 auto;
    padding: 40px;
}

.auth-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--airbnb-dark);
    margin-bottom: 8px;
}

.auth-subtitle {
    color: var(--airbnb-gray);
    font-size: 0.95rem;
    margin-bottom: 24px;
}

.form-control {
    padding: 12px;
    border: 1px solid var(--airbnb-border);
    border-radius: 8px;
    font-size: 1rem;
}

.form-control:focus {
    border-color: var(--airbnb-dark);
    box-shadow: none;
}

.btn-auth {
    background: var(--airbnb-red);
    color: white;
    padding: 14px;
    border-radius: 8px;
    border: none;
    font-weight: 600;
    font-size: 1rem;
    width: 100%;
    transition: all 0.2s;
}

.btn-auth:hover {
    background: #E31C5F;
    color: white;
}

.divider {
    text-align: center;
    margin: 24px 0;
    position: relative;
}

.divider::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    width: 100%;
    height: 1px;
    background: var(--airbnb-border);
}

.divider span {
    background: white;
    padding: 0 16px;
    position: relative;
    color: var(--airbnb-gray);
    font-size: 0.875rem;
}

.terms-text {
    font-size: 0.875rem;
    color: var(--airbnb-gray);
    line-height: 1.5;
}

.terms-text a {
    color: var(--airbnb-dark);
    text-decoration: underline;
}
</style>

<div class="auth-page py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-7">
                <div class="auth-card">
                    <!-- Header -->
                    <div class="text-center mb-4">
                        <h1 class="auth-title">Welcome to TripNest</h1>
                        <p class="auth-subtitle">Create your account to get started</p>
                    </div>

                    <!-- Error Alert -->
                    <% if (typeof error !== 'undefined' && error && error.trim && error.trim().length > 0) { %>
                        <div class="alert alert-danger rounded-3 d-flex align-items-center" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            <div><%= error %></div>
                        </div>
                    <% } %>

                    <!-- Signup Form -->
                    <form action="/auth/signup" method="POST" class="needs-validation" novalidate>
                        <!-- Username Field -->
                        <div class="mb-3">
                            <label for="username" class="form-label fw-semibold">Username</label>
                            <input type="text" 
                                   class="form-control"
                                   id="username" 
                                   name="username"
                                   value="<%= typeof formData !== 'undefined' ? formData.username || '' : '' %>"
                                   required 
                                   maxlength="50" 
                                   placeholder="Choose a unique username">
                            <div class="form-text" style="font-size: 0.8rem;">
                                3-50 characters, letters and numbers only
                            </div>
                            <div class="invalid-feedback">
                                Please provide a valid username.
                            </div>
                        </div>

                        <!-- Email Field -->
                        <div class="mb-3">
                            <label for="email" class="form-label fw-semibold">Email Address</label>
                            <input type="email" 
                                   class="form-control"
                                   id="email" 
                                   name="email"
                                   value="<%= typeof formData !== 'undefined' ? formData.email || '' : '' %>"
                                   required 
                                   maxlength="100" 
                                   placeholder="your.email@example.com">
                            <div class="form-text" style="font-size: 0.8rem;">
                                We'll never share your email with anyone
                            </div>
                            <div class="invalid-feedback">
                                Please provide a valid email address.
                            </div>
                        </div>

                        <!-- Password Field -->
                        <div class="mb-3">
                            <label for="password" class="form-label fw-semibold">Password</label>
                            <input type="password" 
                                   class="form-control"
                                   id="password" 
                                   name="password" 
                                   required 
                                   minlength="6" 
                                   maxlength="100"
                                   placeholder="Create a secure password">
                            <div class="form-text" style="font-size: 0.8rem;">
                                Minimum 6 characters
                            </div>
                            <div class="invalid-feedback">
                                Password must be at least 6 characters long.
                            </div>
                        </div>

                        <!-- Terms Agreement -->
                        <div class="mb-4">
                            <div class="form-check">
                                <input class="form-check-input" 
                                       type="checkbox" 
                                       id="terms" 
                                       required>
                                <label class="form-check-label terms-text" for="terms">
                                    I agree to the <a href="/listings">Terms of Service</a> and <a href="/listings">Privacy Policy</a>
                                </label>
                                <div class="invalid-feedback">
                                    You must agree to the terms and conditions.
                                </div>
                            </div>
                        </div>

                        <!-- Submit Button -->
                        <button type="submit" class="btn-auth">
                            Sign up
                        </button>
                    </form>

                    <!-- Divider -->
                    <div class="divider">
                        <span>or</span>
                    </div>

                    <!-- Login Link -->
                    <div class="text-center">
                        <p class="mb-0" style="color: var(--airbnb-gray);">
                            Already have an account? 
                            <a href="/auth/login" class="text-decoration-none fw-semibold" style="color: var(--airbnb-red);">
                                Log in
                            </a>
                        </p>
                    </div>

                    <!-- Back to Home -->
                    <div class="text-center mt-4">
                        <a href="/" class="text-decoration-none" style="color: var(--airbnb-gray); font-size: 0.875rem;">
                            <i class="fas fa-arrow-left me-1"></i>Back to home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/javascript/SignUpValidatation.js"></script>