<% layout('layouts/boilerplate') %>

<style>
.auth-page {
    min-height: 80vh;
    display: flex;
    align-items: center;
    background: var(--airbnb-light-gray);
}

.auth-card {
    background: white;
    border: 1px solid var(--airbnb-border);
    border-radius: 12px;
    max-width: 480px;
    margin: 0 auto;
    padding: 40px;
}

.auth-title {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--airbnb-dark);
    margin-bottom: 8px;
}

.auth-subtitle {
    color: var(--airbnb-gray);
    font-size: 0.95rem;
    margin-bottom: 24px;
}

.form-control {
    padding: 12px;
    border: 1px solid var(--airbnb-border);
    border-radius: 8px;
    font-size: 1rem;
}

.form-control:focus {
    border-color: var(--airbnb-dark);
    box-shadow: none;
}

.btn-auth {
    background: var(--airbnb-red);
    color: white;
    padding: 14px;
    border-radius: 8px;
    border: none;
    font-weight: 600;
    font-size: 1rem;
    width: 100%;
    transition: all 0.2s;
}

.btn-auth:hover {
    background: #E31C5F;
    color: white;
}

.divider {
    text-align: center;
    margin: 24px 0;
    position: relative;
}

.divider::before {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    width: 100%;
    height: 1px;
    background: var(--airbnb-border);
}

.divider span {
    background: white;
    padding: 0 16px;
    position: relative;
    color: var(--airbnb-gray);
    font-size: 0.875rem;
}
</style>

<div class="auth-page py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-7">
                <div class="auth-card">
                    <!-- Header -->
                    <div class="text-center mb-4">
                        <h1 class="auth-title">Welcome back to TripNest</h1>
                        <p class="auth-subtitle">Log in to continue</p>
                    </div>

                    <!-- Error Alert -->
                    <% if (typeof error !== 'undefined' && error && error.trim && error.trim().length > 0) { %>
                        <div class="alert alert-danger rounded-3 d-flex align-items-center" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            <div><%= error %></div>
                        </div>
                    <% } %>

                    <!-- Login Form -->
                    <form action="/auth/login" method="POST" class="needs-validation" novalidate>
                        <!-- Username/Email Field -->
                        <div class="mb-3">
                            <label for="username" class="form-label fw-semibold">Email or Username</label>
                            <input type="text" 
                                   class="form-control" 
                                   id="username" 
                                   name="username"
                                   value="<%= typeof formData !== 'undefined' ? formData.username || '' : '' %>"
                                   required 
                                   maxlength="100" 
                                   placeholder="Enter your email or username">
                            <div class="invalid-feedback">
                                Please provide your username or email.
                            </div>
                        </div>

                        <!-- Password Field -->
                        <div class="mb-3">
                            <label for="password" class="form-label fw-semibold">Password</label>
                            <div class="input-group">
                                <input type="password" 
                                       class="form-control border-end-0" 
                                       id="password" 
                                       name="password" 
                                       required 
                                       placeholder="Enter your password">
                                <button class="btn btn-outline-secondary bg-white" 
                                        type="button" 
                                        id="togglePassword"
                                        style="border-left: 0;"
                                        aria-label="Toggle password visibility">
                                    <i class="fas fa-eye" id="toggleIcon"></i>
                                </button>
                            </div>
                            <div class="invalid-feedback">
                                Please provide your password.
                            </div>
                        </div>

                        <!-- Remember Me & Forgot Password -->
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="remember" name="remember">
                                <label class="form-check-label" for="remember">
                                    Remember me
                                </label>
                            </div>
                            <a href="#" class="text-decoration-none" style="color: var(--airbnb-dark); font-size: 0.875rem;">
                                Forgot password?
                            </a>
                        </div>

                        <!-- Submit Button -->
                        <button type="submit" class="btn-auth">
                            Log in
                        </button>
                    </form>

                    <!-- Divider -->
                    <div class="divider">
                        <span>or</span>
                    </div>

                    <!-- Sign Up Link -->
                    <div class="text-center">
                        <p class="mb-0" style="color: var(--airbnb-gray);">
                            Don't have an account? 
                            <a href="/auth/signup" class="text-decoration-none fw-semibold" style="color: var(--airbnb-red);">
                                Sign up
                            </a>
                        </p>
                    </div>

                    <!-- Back to Home -->
                    <div class="text-center mt-4">
                        <a href="/" class="text-decoration-none" style="color: var(--airbnb-gray); font-size: 0.875rem;">
                            <i class="fas fa-arrow-left me-1"></i>Back to home
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/javascript/LogInValidatation.js"></script>