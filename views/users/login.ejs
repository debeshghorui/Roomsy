<!--
    LOGIN PAGE TEMPLATE
    ===================
    
    Purpose: User authentication login form for the WanderLust platform
    Layout: Uses boilerplate layout for consistency
    
    Features:
    - Responsive card-based login form
    - Client-side form validation with Bootstrap
    - Password visibility toggle functionality
    - Remember me checkbox option
    - Error message display from server
    - Social login options (commented out for future use)
    - Auto-focus on username field for UX
    
    Form Fields:
    - Username/Email (required, max 100 chars)
    - Password (required, with visibility toggle)
    - Remember me checkbox
    
    Security Features:
    - Form validation (client & server-side)
    - CSRF protection (handled by server middleware)
    - Password masking with optional visibility
    
    Navigation:
    - Link to signup page for new users
    - Back to home button
    - Forgot password link (placeholder)
    
    Server Integration:
    - POST to /auth/login
    - Error messages from server flash middleware
    - Form data persistence on validation errors
-->
<% layout('layouts/boilerplate') %>

<!-- LOGIN FORM CONTAINER -->
<div class="bg-light py-5">

    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-5 col-md-7">
                
                <!-- LOGIN CARD -->
                <div class="card shadow-lg border-0 rounded-4">
                    
                    <!-- CARD HEADER -->
                    <div class="card-header bg-primary text-white rounded-top-4 text-center py-4">
                        <h1 class="mb-0 fw-bold">
                            <i class="fas fa-sign-in-alt me-3"></i>Sign In
                        </h1>
                        <p class="mb-0 mt-2 opacity-75">Welcome back to WanderLust</p>
                    </div>

                    <!-- CARD BODY WITH LOGIN FORM -->
                    <div class="card-body p-5">
                        
                        <!-- ERROR ALERT DISPLAY -->
                        <!-- Shows server-side validation errors -->
                        <% if (typeof error !== 'undefined' && error && error.trim && error.trim().length > 0) { %>
                            <div class="alert alert-danger alert-dismissible fade show rounded-3" role="alert">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                <%= error %>
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        <% } %>

                        <!-- LOGIN FORM -->
                        <!-- Bootstrap validation classes for client-side validation -->
                        <form action="/auth/login" method="POST" class="needs-validation" novalidate>
                            <!-- USERNAME/EMAIL FIELD -->
                            <div class="mb-4">
                                <label for="username" class="form-label fw-bold">
                                    <i class="fas fa-user text-primary me-2"></i>Username or Email *
                                </label>
                                <!-- Input with form data persistence for validation errors -->
                                <input type="text" 
                                       class="form-control form-control-lg rounded-3" 
                                       id="username" 
                                       name="username"
                                       value="<%= typeof formData !== 'undefined' ? formData.username || '' : '' %>"
                                       required 
                                       maxlength="100" 
                                       placeholder="Enter your username or email">
                                <!-- Bootstrap validation feedback -->
                                <div class="invalid-feedback">
                                    Please provide your username or email.
                                </div>
                            </div>

                            <!-- PASSWORD FIELD WITH VISIBILITY TOGGLE -->
                            <div class="mb-4">
                                <label for="password" class="form-label fw-bold">
                                    <i class="fas fa-lock text-warning me-2"></i>Password *
                                </label>
                                <!-- Input group for password with toggle button -->
                                <div class="input-group">
                                    <input type="password" 
                                           class="form-control form-control-lg rounded-start-3" 
                                           id="password" 
                                           name="password" 
                                           required 
                                           placeholder="Enter your password">
                                    <!-- Password visibility toggle button -->
                                    <button class="btn btn-outline-secondary rounded-end-3" 
                                            type="button" 
                                            id="togglePassword"
                                            aria-label="Toggle password visibility">
                                        <i class="fas fa-eye" id="toggleIcon"></i>
                                    </button>
                                </div>
                                <div class="invalid-feedback">
                                    Please provide your password.
                                </div>
                            </div>

                            <!-- REMEMBER ME AND FORGOT PASSWORD ROW -->
                            <div class="row mb-4">
                                <!-- Remember Me Checkbox -->
                                <div class="col-6">
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" id="remember" name="remember">
                                        <label class="form-check-label" for="remember">
                                            Remember me
                                        </label>
                                    </div>
                                </div>
                                <!-- Forgot Password Link -->
                                <div class="col-6 text-end">
                                    <a href="/auth/login" class="text-decoration-none small">
                                        <i class="fas fa-question-circle me-1"></i>Forgot Password?
                                    </a>
                                </div>
                            </div>

                            <!-- FORM SUBMISSION BUTTONS -->
                            <div class="d-grid gap-3">
                                <!-- Primary Submit Button -->
                                <button type="submit" class="btn btn-primary btn-lg rounded-pill py-3">
                                    <i class="fas fa-sign-in-alt me-2"></i>Sign In
                                </button>
                                
                                <!-- Link to Signup Page -->
                                <div class="text-center my-3">
                                    <span class="text-muted">Don't have an account?</span>
                                    <a href="/auth/signup" class="text-decoration-none ms-1 fw-semibold">Sign Up</a>
                                </div>

                                <!-- Back to Home Button -->
                                <a href="/" class="btn btn-outline-secondary rounded-pill py-3">
                                    <i class="fas fa-arrow-left me-2"></i>Back to Home
                                </a>
                            </div>
                        </form>

                        <!-- SOCIAL LOGIN OPTIONS (FUTURE IMPLEMENTATION) -->
                        <!-- Commented out for future OAuth integration -->
                        <!-- <div class="mt-4 pt-4 border-top">
                            <div class="text-center mb-3">
                                <small class="text-muted">Or sign in with</small>
                            </div>
                            <div class="d-grid gap-2">
                                <button class="btn btn-outline-danger rounded-pill" type="button">
                                    <i class="fab fa-google me-2"></i>Continue with Google
                                </button>
                                <button class="btn btn-outline-primary rounded-pill" type="button">
                                    <i class="fab fa-facebook-f me-2"></i>Continue with Facebook
                                </button>
                            </div>
                        </div> -->
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- 
    CLIENT-SIDE JAVASCRIPT
    ======================
    Handles form validation, password visibility, and UX enhancements
-->
<script src="/javascript/LogInValidatation.js"></script>