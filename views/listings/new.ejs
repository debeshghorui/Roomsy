<% layout('layouts/boilerplate') %>

    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-lg border-0 rounded-4">
                    <div class="card-header bg-primary text-white rounded-top-4 text-center py-4">
                        <h1 class="mb-0 fw-bold">
                            <i class="fas fa-plus-circle me-3"></i>Create New Listing
                        </h1>
                        <p class="mb-0 mt-2 opacity-75">Share your amazing property with travelers</p>
                    </div>

                    <div class="card-body p-5">
                        <!-- Error Alert -->
                        <% if (typeof error !== 'undefined' && error && error.trim && error.trim().length > 0) { %>
                            <div class="alert alert-danger alert-dismissible fade show rounded-3" role="alert">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                <%= error %>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        <% } %>

                        <form action="/listings" method="POST" class="needs-validation" enctype="multipart/form-data" novalidate>
                            <div class="row">
                                <div class="col-12 mb-4">
                                    <label for="title" class="form-label fw-bold">
                                        <i class="fas fa-home text-primary me-2"></i>Property Title *
                                    </label>
                                    <input type="text" class="form-control form-control-lg rounded-3"
                                        id="title" name="title"
                                        value="<%= typeof formData !== 'undefined' ? formData.title || '' : '' %>"
                                        required maxlength="100"
                                        placeholder="Beautiful Villa with Ocean View">
                                    <div class="invalid-feedback">
                                        Please provide a valid title.
                                    </div>
                                </div>

                                <div class="col-12 mb-4">
                                    <label for="description" class="form-label fw-bold">
                                        <i class="fas fa-align-left text-info me-2"></i>Description *
                                    </label>
                                    <textarea class="form-control rounded-3" id="description"
                                        name="description" rows="5" required maxlength="500"
                                        placeholder="Describe your property, amenities, and what makes it special..."><%= typeof formData !== 'undefined' ? formData.description || '' : '' %></textarea>
                                    <div class="form-text">Maximum 500 characters</div>
                                    <div class="invalid-feedback">
                                        Please provide a description.
                                    </div>
                                </div>

                                <div class="col-md-12 mb-4">
                                    <label for="image" class="form-label fw-bold">
                                        <i class="fas fa-image text-secondary me-2"></i>Upload Image
                                    </label>
                                    <input type="file" class="form-control form-control-lg rounded-3" id="image" name="listing[image]" accept="image/*">
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Leave empty to use default image
                                    </div>
                                </div>
                                
                                <div class="col-md-6 mb-4">
                                    <label for="location" class="form-label fw-bold">
                                        <i class="fas fa-map-marker-alt text-danger me-2"></i>Location *
                                    </label>
                                    <input type="text" class="form-control form-control-lg rounded-3"
                                        id="location" name="location"
                                        value="<%= typeof formData !== 'undefined' ? formData.location || '' : '' %>"
                                        required placeholder="Mumbai, Goa, Delhi...">
                                    <div class="invalid-feedback">
                                        Please provide a location.
                                    </div>
                                </div>

                                <div class="col-md-6 mb-4">
                                    <label for="country" class="form-label fw-bold">
                                        <i class="fas fa-globe text-success me-2"></i>Country *
                                    </label>
                                    <input type="text" class="form-control form-control-lg rounded-3"
                                        id="country" name="country"
                                        value="<%= typeof formData !== 'undefined' ? formData.country || '' : '' %>"
                                        required placeholder="India">
                                    <div class="invalid-feedback">
                                        Please provide a country.
                                    </div>
                                </div>

                                <div class="col-md-6 mb-4">
                                    <label for="price" class="form-label fw-bold">
                                        <i class="fas fa-rupee-sign text-warning me-2"></i>Price per
                                        Night (â‚¹) *
                                    </label>
                                    <input type="number" class="form-control form-control-lg rounded-3"
                                        id="price" name="price"
                                        value="<%= typeof formData !== 'undefined' ? formData.price || '' : '' %>"
                                        required min="1" step="0.01" placeholder="5000">
                                    <div class="invalid-feedback">
                                        Please provide a valid price.
                                    </div>
                                </div>
                            </div>

                            <div class="d-grid gap-3 mt-4">
                                <button type="submit" class="btn btn-primary btn-lg rounded-pill py-3">
                                    <i class="fas fa-plus-circle me-2"></i>Create Listing
                                </button>
                                <a href="/listings"
                                    class="btn btn-outline-secondary btn-lg rounded-pill py-3">
                                    <i class="fas fa-times me-2"></i>Cancel
                                </a>
                            </div>
                        </form>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="/javascript/FormValidatation.js"></script>