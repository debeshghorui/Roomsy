<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Error <%= status %></title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    </head>

<body class="bg-light d-flex align-items-center min-vh-100">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-xl-6">
                <div class="card shadow-lg border-0 rounded-4 text-center">
                    <div class="card-body p-5">
                        <!-- Error Icon -->
                        <div class="mb-4">
                            <% if (status===404) { %>
                                <i class="fas fa-map-marked-alt display-1 text-warning"></i>
                            <% } else if (status===500) { %>
                                <i class="fas fa-exclamation-triangle display-1 text-danger"></i>
                            <% } else if (status===403) { %>
                                <i class="fas fa-lock display-1 text-secondary"></i>
                            <% } else { %>
                                <i class="fas fa-bug display-1 text-info"></i>
                            <% } %>
                        </div>

                        <!-- Error Code -->
                        <div class="mb-3">
                            <h1 class="display-1 fw-bold text-primary">
                                <%= status || 500 %>
                            </h1>
                        </div>

                        <!-- Error Message -->
                        <h2 class="display-6 fw-bold text-dark mb-3">
                            <% if (status===404) { %>
                                Page Not Found
                            <% } else if (status===500) { %>
                                Internal Server Error
                            <% } else if (status===403) { %>
                                Access Forbidden
                            <% } else { %>
                                Something Went Wrong
                            <% } %>
                        </h2>

                        <div class="mb-4">
                            <% if (status===404) { %>
                                <p class="fs-5 text-muted">
                                    The page you're looking for seems to have wandered off. Let's get you back on track!
                                </p>
                            <% } else if (status===500) { %>
                                <p class="fs-5 text-muted">
                                    Our servers are having a moment. We're working to fix this issue.
                                </p>
                            <% } else if (status===403) { %>
                                <p class="fs-5 text-muted">
                                    You don't have permission to access this resource.
                                </p>
                            <% } else { %>
                                <p class="fs-5 text-muted">
                                    <%= message || "An unexpected error occurred. Please try again later." %>
                                </p>
                            <% } %>
                        </div>

                        <!-- Error Details (only in development) -->
                        <% if (typeof stack !=='undefined' && process.env.NODE_ENV !=='production' ) { %>
                            <!-- Development Info -->
                            <div class="alert alert-warning text-start rounded-3 mb-4">
                                <h6 class="fw-bold mb-2">
                                    <i class="fas fa-code me-2"></i>Development Info:
                                </h6>
                                <!-- Error Message -->
                                <small class="text-muted d-block mb-2">
                                    <%= message %>
                                </small>
                                <!-- Stack Trace -->
                                <% if (stack) { %>
                                    <!-- Stack Trace Details -->
                                    <details class="mt-2">
                                        <summary class="text-primary fw-semibold mb-2" style="cursor: pointer;">
                                            <i class="fas fa-list me-1"></i>Stack Trace
                                        </summary>
                                        <pre class="small text-muted bg-dark text-light p-3 rounded"
                                            style="font-size: 0.75rem; max-height: 300px; overflow-y: auto;"><%= stack %></pre>
                                    </details>
                                <% } %>
                            </div>
                        <% } %>

                        <!-- Action Buttons -->
                        <div class="d-flex gap-3 justify-content-center flex-wrap mb-4">
                            <a href="/" class="btn btn-primary btn-lg rounded-pill px-4">
                                <i class="fas fa-home me-2"></i>Go Home
                            </a>
                            <a href="/listings" class="btn btn-outline-primary btn-lg rounded-pill px-4">
                                <i class="fas fa-list me-2"></i>View Listings
                            </a>
                        </div>

                        <div class="mb-4">
                            <button onclick="history.back()" class="btn btn-link text-decoration-none">
                                <i class="fas fa-arrow-left me-2"></i>Go Back
                            </button>
                        </div>

                        <!-- Additional Help -->
                        <div class="border-top pt-4">
                            <h6 class="text-muted mb-3 fw-semibold">Need Help?</h6>
                            <div class="row text-center">
                                <div class="col-md-4 mb-3">
                                    <a href="/listings" class="text-decoration-none text-muted d-block p-2">
                                        <i class="fas fa-search fs-4 mb-2 d-block"></i>
                                        <small>Search Listings</small>
                                    </a>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <a href="/listings/new" class="text-decoration-none text-muted d-block p-2">
                                        <i class="fas fa-plus fs-4 mb-2 d-block"></i>
                                        <small>Add Listing</small>
                                    </a>
                                </div>
                                <div class="col-md-4 mb-3">
                                    <a href="mailto:support@wanderlust.com"
                                        class="text-decoration-none text-muted d-block p-2">
                                        <i class="fas fa-envelope fs-4 mb-2 d-block"></i>
                                        <small>Contact Support</small>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Auto redirect for 404 after 10 seconds -->
    <% if (status===404) { %>
        <script>
            let countdown = 10;
            const countdownElement = document.createElement('div');
            countdownElement.className = 'alert alert-info mt-3 text-center';
            countdownElement.innerHTML = `
                <i class="fas fa-clock me-2"></i>
                Redirecting to homepage in <span id="countdown">${countdown}</span> seconds...
                <button type="button" class="btn btn-sm btn-outline-info ms-2" onclick="clearTimeout(redirectTimer)">
                    Cancel
                </button>
            `;
            document.querySelector('.card-body').appendChild(countdownElement);

            const redirectTimer = setTimeout(() => {
                window.location.href = '/';
            }, 10000);

            const countdownTimer = setInterval(() => {
                countdown--;
                const countdownSpan = document.getElementById('countdown');
                if (countdownSpan) {
                    countdownSpan.textContent = countdown;
                }
                if (countdown <= 0) {
                    clearInterval(countdownTimer);
                }
            }, 1000);
        </script>
        <% } %>
</body>

</html>