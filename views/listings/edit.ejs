<% layout('layouts/boilerplate') %>
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-lg border-0 rounded-4">
                    <div class="card-header bg-warning text-dark rounded-top-4 text-center py-4">
                        <h1 class="mb-0 fw-bold">
                            <i class="fas fa-edit me-3"></i>Edit Listing
                        </h1>
                        <p class="mb-0 mt-2 opacity-75">Update your property information</p>
                    </div>

                    <div class="card-body p-5">
                        <!-- Error Alert -->
                        <% if (typeof error !== 'undefined' && error && error.trim && error.trim().length > 0) { %>
                            <div class="alert alert-danger alert-dismissible fade show rounded-3" role="alert">
                                <i class="fas fa-exclamation-triangle me-2"></i>
                                <%= error %>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        <% } %>

                        <form action="/listings/<%= listing._id %>/edit?_method=PATCH" method="POST"
                            class="needs-validation" novalidate enctype="multipart/form-data">
                            <div class="row">
                                <div class="col-12 mb-4">
                                    <label for="title" class="form-label fw-bold">
                                        <i class="fas fa-home text-primary me-2"></i>Property Title *
                                    </label>
                                    <input type="text" class="form-control form-control-lg rounded-3"
                                        id="title" name="title" value="<%= listing.title %>" required
                                        maxlength="100" placeholder="Beautiful Villa with Ocean View">
                                    <div class="invalid-feedback">
                                        Please provide a valid title.
                                    </div>
                                </div>

                                <div class="col-12 mb-4">
                                    <label for="description" class="form-label fw-bold">
                                        <i class="fas fa-align-left text-info me-2"></i>Description *
                                    </label>
                                    <textarea class="form-control rounded-3" id="description"
                                        name="description" rows="5" required maxlength="500"
                                        placeholder="Describe your property, amenities, and what makes it special..."><%= listing.description %></textarea>
                                    <div class="form-text">Maximum 500 characters</div>
                                    <div class="invalid-feedback">
                                        Please provide a description.
                                    </div>
                                </div>

                                <div class="col-md-12 mb-4">
                                    <label for="image" class="form-label fw-bold">
                                        <i class="fas fa-image text-secondary me-2"></i>Current Image
                                    </label>
                                    <% if (listing.image && listing.image.url) { %>
                                        <div class="mb-3">
                                            <img src="<%= listing.image.url %>" alt="Current Image"
                                                class="img-fluid rounded-3" style="max-height: 300px;">
                                        </div>
                                    <% } %>
                                </div>

                                <div class="col-md-12 mb-4">
                                    <label for="image" class="form-label fw-bold">
                                        <i class="fas fa-image text-secondary me-2"></i>New Image
                                    </label>
                                    <input type="file" class="form-control form-control-lg rounded-3" id="image" name="listing[image]" accept="image/*">
                                    <div class="form-text">
                                        <i class="fas fa-info-circle me-1"></i>
                                        Leave empty to use default image
                                    </div>
                                </div>

                                <div class="col-md-6 mb-4">
                                    <label for="location" class="form-label fw-bold">
                                        <i class="fas fa-map-marker-alt text-danger me-2"></i>Location *
                                    </label>
                                    <input type="text" class="form-control form-control-lg rounded-3"
                                        id="location" name="location" value="<%= listing.location %>"
                                        required placeholder="Mumbai, Goa, Delhi...">
                                    <div class="invalid-feedback">
                                        Please provide a location.
                                    </div>
                                </div>

                                <div class="col-md-6 mb-4">
                                    <label for="country" class="form-label fw-bold">
                                        <i class="fas fa-globe text-success me-2"></i>Country *
                                    </label>
                                    <input type="text" class="form-control form-control-lg rounded-3"
                                        id="country" name="country" value="<%= listing.country %>"
                                        required placeholder="India">
                                    <div class="invalid-feedback">
                                        Please provide a country.
                                    </div>
                                </div>

                                <div class="col-md-6 mb-4">
                                    <label for="price" class="form-label fw-bold">
                                        <i class="fas fa-rupee-sign text-warning me-2"></i>Price per
                                        Night (â‚¹) *
                                    </label>
                                    <input type="number" class="form-control form-control-lg rounded-3"
                                        id="price" name="price" value="<%= listing.price %>" required
                                        min="1" step="0.01" placeholder="5000">
                                    <div class="invalid-feedback">
                                        Please provide a valid price.
                                    </div>
                                </div>
                            </div>

                            <div class="d-grid gap-3 mt-4">
                                <button type="submit" class="btn btn-warning btn-lg rounded-pill py-3">
                                    <i class="fas fa-save me-2"></i>Update Listing
                                </button>
                                <a href="/listings/<%= listing._id %>"
                                    class="btn btn-outline-secondary btn-lg rounded-pill py-3">
                                    <i class="fas fa-times me-2"></i>Cancel
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Form Validation Script -->
    <script src="/javascript/FormValidatation.js"></script>