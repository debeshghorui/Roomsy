<% layout('layouts/boilerplate') %>

<style>
.form-page {
    background: var(--airbnb-light-gray);
    min-height: 80vh;
}

.form-card {
    background: white;
    border: 1px solid var(--airbnb-border);
    border-radius: 12px;
    padding: 40px;
}

.form-title {
    font-size: 2rem;
    font-weight: 600;
    color: var(--airbnb-dark);
    margin-bottom: 8px;
}

.form-subtitle {
    color: var(--airbnb-gray);
    font-size: 1rem;
    margin-bottom: 32px;
}

.form-control, .form-select {
    padding: 12px;
    border: 1px solid var(--airbnb-border);
    border-radius: 8px;
    font-size: 1rem;
}

.form-control:focus, .form-select:focus {
    border-color: var(--airbnb-dark);
    box-shadow: none;
}

.form-label {
    font-weight: 600;
    color: var(--airbnb-dark);
    margin-bottom: 8px;
}

.btn-submit {
    background: var(--airbnb-dark);
    color: white;
    padding: 14px 32px;
    border-radius: 8px;
    border: none;
    font-weight: 600;
    font-size: 1rem;
    transition: all 0.2s;
}

.btn-submit:hover {
    background: #000;
    color: white;
}

.btn-cancel {
    background: white;
    color: var(--airbnb-dark);
    padding: 14px 32px;
    border-radius: 8px;
    border: 1px solid var(--airbnb-dark);
    font-weight: 600;
    font-size: 1rem;
    transition: all 0.2s;
}

.btn-cancel:hover {
    background: var(--airbnb-light-gray);
}

.current-image {
    border-radius: 12px;
    overflow: hidden;
    max-height: 300px;
}

.current-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}
</style>

<div class="form-page py-5">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <!-- Back Button -->
                <div class="mb-3">
                    <a href="/listings/<%= listing._id %>" class="text-decoration-none text-dark">
                        <i class="fas fa-arrow-left me-2"></i>Back to listing
                    </a>
                </div>

                <div class="form-card">
                    <!-- Header -->
                    <div class="text-center mb-4">
                        <h1 class="form-title">Edit your listing</h1>
                        <p class="form-subtitle">Update your property information</p>
                    </div>

                    <!-- Error Alert -->
                    <% if (typeof error !== 'undefined' && error && error.trim && error.trim().length > 0) { %>
                        <div class="alert alert-danger rounded-3 d-flex align-items-center mb-4" role="alert">
                            <i class="fas fa-exclamation-circle me-2"></i>
                            <div><%= error %></div>
                        </div>
                    <% } %>

                    <!-- Current Image Preview -->
                    <% if (listing.image && listing.image.url) { %>
                        <div class="mb-4">
                            <label class="form-label">Current Photo</label>
                            <div class="current-image">
                                <img src="<%= listing.image.url %>" alt="Current listing photo">
                            </div>
                        </div>
                    <% } %>

                    <!-- Form -->
                    <form action="/listings/<%= listing._id %>/edit?_method=PATCH" method="POST" class="needs-validation" novalidate enctype="multipart/form-data">
                        <!-- Property Title -->
                        <div class="mb-4">
                            <label for="title" class="form-label">Property Title</label>
                            <input type="text" 
                                   class="form-control"
                                   id="title" 
                                   name="title" 
                                   value="<%= listing.title %>" 
                                   required
                                   maxlength="100" 
                                   placeholder="Beautiful Villa with Ocean View">
                            <div class="form-text" style="font-size: 0.875rem; color: var(--airbnb-gray);">
                                Make it catchy and descriptive
                            </div>
                            <div class="invalid-feedback">
                                Please provide a title for your listing.
                            </div>
                        </div>

                        <!-- Description -->
                        <div class="mb-4">
                            <label for="description" class="form-label">Description</label>
                            <textarea class="form-control" 
                                      id="description"
                                      name="description" 
                                      rows="5" 
                                      required 
                                      maxlength="500"
                                      placeholder="Describe your property, amenities, and what makes it special..."><%= listing.description %></textarea>
                            <div class="form-text" style="font-size: 0.875rem; color: var(--airbnb-gray);">
                                Maximum 500 characters
                            </div>
                            <div class="invalid-feedback">
                                Please provide a description.
                            </div>
                        </div>

                        <!-- Location and Country -->
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label for="location" class="form-label">Location</label>
                                <input type="text" 
                                       class="form-control"
                                       id="location" 
                                       name="location"
                                       value="<%= listing.location %>"
                                       required 
                                       placeholder="Mumbai, Goa, Delhi...">
                                <div class="invalid-feedback">
                                    Please provide a location.
                                </div>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label for="country" class="form-label">Country</label>
                                <input type="text" 
                                       class="form-control"
                                       id="country" 
                                       name="country"
                                       value="<%= listing.country %>"
                                       required 
                                       placeholder="India">
                                <div class="invalid-feedback">
                                    Please provide a country.
                                </div>
                            </div>
                        </div>

                        <!-- Price and New Image -->
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label for="price" class="form-label">Price per Night (â‚¹)</label>
                                <input type="number" 
                                       class="form-control"
                                       id="price" 
                                       name="price"
                                       value="<%= listing.price %>"
                                       required 
                                       min="1" 
                                       step="0.01" 
                                       placeholder="5000">
                                <div class="invalid-feedback">
                                    Please provide a valid price.
                                </div>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label for="image" class="form-label">Update Photo</label>
                                <input type="file" 
                                       class="form-control" 
                                       id="image" 
                                       name="listing[image]" 
                                       accept="image/*">
                                <div class="form-text" style="font-size: 0.875rem; color: var(--airbnb-gray);">
                                    Leave empty to keep current photo
                                </div>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex gap-3 mt-5">
                            <button type="submit" class="btn-submit flex-grow-1">
                                <i class="fas fa-save me-2"></i>Save Changes
                            </button>
                            <a href="/listings/<%= listing._id %>" class="btn-cancel">
                                Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="/javascript/FormValidatation.js"></script>