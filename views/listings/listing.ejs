<% layout('layouts/boilerplate') %>
<!-- Mapbox GL JS -->
<link href="https://api.mapbox.com/mapbox-gl-js/v3.15.0/mapbox-gl.css" rel="stylesheet">
<script src="https://api.mapbox.com/mapbox-gl-js/v3.15.0/mapbox-gl.js"></script>
<!-- Map Initialization -->
<script>
    let mapToken = '<%= process.env.MAP_BOX_TOKEN %>';
    let listing = <%- JSON.stringify(listing || null) %>;
</script>

<style>
.listing-detail-page {
    background: white;
}

.listing-header-image {
    height: 60vh;
    min-height: 400px;
    max-height: 600px;
    border-radius: 12px;
    overflow: hidden;
}

.listing-header-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
}

.listing-title {
    font-size: 2rem;
    font-weight: 600;
    color: var(--airbnb-dark);
    margin-bottom: 8px;
}

.listing-subtitle {
    font-size: 1rem;
    color: var(--airbnb-gray);
}

.info-card {
    border: 1px solid var(--airbnb-border);
    border-radius: 12px;
    padding: 24px;
    position: sticky;
    top: 100px;
}

.price-large {
    font-size: 1.5rem;
    font-weight: 600;
}

.review-section {
    border-top: 1px solid var(--airbnb-border);
    padding-top: 32px;
    margin-top: 32px;
}

.review-card {
    background: var(--airbnb-light-gray);
    border-radius: 12px;
    padding: 20px;
    margin-bottom: 16px;
}

.review-form-card {
    border: 1px solid var(--airbnb-border);
    border-radius: 12px;
    padding: 24px;
    background: white;
}
</style>

<div class="listing-detail-page">
    <div class="container py-4">
        <!-- Back Button -->
        <div class="mb-3">
            <a href="/listings" class="text-decoration-none text-dark">
                <i class="fas fa-arrow-left me-2"></i>Back to listings
            </a>
        </div>

        <!-- Listing Title -->
        <div class="mb-3">
            <h1 class="listing-title"><%= listing.title %></h1>
            <div class="d-flex align-items-center gap-3">
                <% if (listing.reviews && listing.reviews.length > 0) { %>
                    <% 
                        const totalRating = listing.reviews.reduce((sum, review) => sum + review.rating, 0);
                        const averageRating = (totalRating / listing.reviews.length).toFixed(2);
                    %>
                    <span class="listing-subtitle">
                        <i class="fas fa-star"></i>
                        <strong><%= averageRating %></strong>
                        · <%= listing.reviews.length %> <%= listing.reviews.length === 1 ? 'review' : 'reviews' %>
                    </span>
                <% } else { %>
                    <span class="listing-subtitle">
                        <i class="fas fa-star text-muted"></i> New listing
                    </span>
                <% } %>
                <span class="listing-subtitle">
                    <i class="fas fa-map-marker-alt"></i>
                    <%= listing.location %>, <%= listing.country %>
                </span>
            </div>
        </div>

        <!-- Main Image -->
        <div class="listing-header-image mb-4">
            <% if (listing.image && listing.image.url) { %>
                <img src="<%= listing.image.url %>" alt="<%= listing.title %>">
            <% } else { %>
                <img src="https://images.unsplash.com/photo-1564013799919-ab600027ffc6?w=1200" alt="<%= listing.title %>">
            <% } %>
        </div>

        <!-- Content Grid -->
        <div class="row">
            <!-- Left Column - Details -->
            <div class="col-lg-7 mb-4">
                <!-- Hosted By Section -->
                <div class="pb-4 mb-4" style="border-bottom: 1px solid var(--airbnb-border);">
                    <h2 class="h4 fw-semibold mb-3">Entire place hosted by <%= listing.owner.username || 'Host' %></h2>
                    <div class="d-flex align-items-center gap-2 text-muted">
                        <span><i class="fas fa-home me-1"></i>Entire home</span>
                    </div>
                </div>

                <!-- Description -->
                <div class="pb-4 mb-4" style="border-bottom: 1px solid var(--airbnb-border);">
                    <h3 class="h5 fw-semibold mb-3">About this place</h3>
                    <p class="text-dark" style="line-height: 1.6; font-size: 1rem;">
                        <%= listing.description %>
                    </p>
                </div>

                <!-- Owner Actions -->
                <% if (currentUser && currentUser._id.equals(listing.owner._id)) { %>
                    <div class="pb-4 mb-4" style="border-bottom: 1px solid var(--airbnb-border);">
                        <h3 class="h5 fw-semibold mb-3">Manage your listing</h3>
                        <div class="d-flex gap-2 flex-wrap">
                            <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark rounded-pill px-4">
                                <i class="fas fa-edit me-2"></i>Edit
                            </a>
                            <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST" class="d-inline">
                                <button type="submit" class="btn btn-outline-dark rounded-pill px-4"
                                    onclick="return confirm('Are you sure you want to delete this listing?')">
                                    <i class="fas fa-trash me-2"></i>Delete
                                </button>
                            </form>
                        </div>
                    </div>
                <% } %>

                <!-- Map Section -->
                <div class="pb-4 mb-4">
                    <h3 class="h5 fw-semibold mb-3">Where you'll be</h3>
                    <div id="map" style="width: 100%; height: 400px; border-radius: 12px; overflow: hidden;"></div>
                    <p class="mt-3 text-muted">
                        <i class="fas fa-map-marker-alt me-2"></i><%= listing.location %>, <%= listing.country %>
                    </p>
                </div>
            </div>

            <!-- Right Column - Booking Card -->
            <div class="col-lg-5">
                <div class="info-card shadow-sm">
                    <div class="mb-3">
                        <span class="price-large">₹<%= listing.price.toLocaleString('en-IN') %></span>
                        <span class="text-muted"> / night</span>
                    </div>

                    <% if (listing.reviews && listing.reviews.length > 0) { %>
                        <% 
                            const totalRating = listing.reviews.reduce((sum, review) => sum + review.rating, 0);
                            const averageRating = (totalRating / listing.reviews.length).toFixed(2);
                        %>
                        <div class="mb-3">
                            <i class="fas fa-star"></i>
                            <strong><%= averageRating %></strong>
                            <span class="text-muted">· <%= listing.reviews.length %> <%= listing.reviews.length === 1 ? 'review' : 'reviews' %></span>
                        </div>
                    <% } %>

                    <div class="alert alert-info border-0 rounded-3 mb-0">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Contact host to book</strong>
                        <p class="mb-0 mt-2 small">This is a demo listing. In production, you would have a booking calendar and reservation system here.</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Reviews Section -->
        <div class="review-section">
            <div class="row">
                <!-- Reviews Display -->
                <div class="col-lg-7 mb-4">
                    <h2 class="h4 fw-semibold mb-4">
                        <% if (listing.reviews && listing.reviews.length > 0) { %>
                            <% 
                                const totalRating = listing.reviews.reduce((sum, review) => sum + review.rating, 0);
                                const averageRating = (totalRating / listing.reviews.length).toFixed(2);
                            %>
                            <i class="fas fa-star"></i> <%= averageRating %> · <%= listing.reviews.length %> <%= listing.reviews.length === 1 ? 'review' : 'reviews' %>
                        <% } else { %>
                            No reviews yet
                        <% } %>
                    </h2>

                    <% if (listing.reviews && listing.reviews.length > 0) { %>
                        <div class="row g-3">
                            <% listing.reviews.forEach((review) => { %>
                                <div class="col-md-6">
                                    <div class="review-card">
                                        <div class="d-flex align-items-center mb-2">
                                            <div class="bg-dark text-white rounded-circle d-flex align-items-center justify-content-center me-2"
                                                style="width: 40px; height: 40px;">
                                                <i class="fas fa-user"></i>
                                            </div>
                                            <div>
                                                <h6 class="mb-0 fw-semibold"><%= review.author.username %></h6>
                                                <small class="text-muted">
                                                    <%= review.createdAt ? review.createdAt.toLocaleDateString('en-US', { month: 'long', year: 'numeric' }) : '' %>
                                                </small>
                                            </div>
                                        </div>
                                        <div class="mb-2">
                                            <p class="starability-result" data-rating="<%= review.rating %>"></p>
                                        </div>
                                        <p class="mb-0" style="font-size: 0.95rem;"><%= review.comment %></p>
                                        
                                        <!-- Delete button for review owner -->
                                        <% if (currentUser && review.author && currentUser._id.equals(review.author._id)) { %>
                                            <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST" class="mt-2">
                                                <button type="submit" class="btn btn-sm btn-outline-danger rounded-pill"
                                                    onclick="return confirm('Are you sure you want to delete this review?')">
                                                    <i class="fas fa-trash"></i> Delete
                                                </button>
                                            </form>
                                        <% } %>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    <% } else { %>
                        <div class="text-center py-5">
                            <i class="fas fa-comments display-4 text-muted mb-3"></i>
                            <h5 class="text-muted">No reviews yet</h5>
                            <p class="text-muted">Be the first to share your experience!</p>
                        </div>
                    <% } %>
                </div>

                <!-- Review Form -->
                <div class="col-lg-5">
                    <div class="review-form-card">
                        <h3 class="h5 fw-semibold mb-4">Leave a review</h3>
                        <% if (currentUser) { %>
                            <form action="/listings/<%= listing._id %>/reviews" method="POST">
                                <div class="mb-3">
                                    <label for="author" class="form-label fw-semibold">Your Name</label>
                                    <input type="text" class="form-control rounded-3" id="author" name="author" 
                                           required maxlength="50" placeholder="Enter your name">
                                </div>
                                <div class="mb-3">
                                    <label for="rating" class="form-label fw-semibold">Rating</label>
                                    <fieldset class="starability-slot">
                                        <input type="radio" id="no-rate" class="input-no-rate" name="rating" value="0" checked aria-label="No rating." />
                                        <input type="radio" id="first-rate1" name="rating" value="1" />
                                        <label for="first-rate1" title="Terrible">1 star</label>
                                        <input type="radio" id="first-rate2" name="rating" value="2" />
                                        <label for="first-rate2" title="Not good">2 stars</label>
                                        <input type="radio" id="first-rate3" name="rating" value="3" />
                                        <label for="first-rate3" title="Average">3 stars</label>
                                        <input type="radio" id="first-rate4" name="rating" value="4" />
                                        <label for="first-rate4" title="Very good">4 stars</label>
                                        <input type="radio" id="first-rate5" name="rating" value="5" />
                                        <label for="first-rate5" title="Amazing">5 stars</label>
                                    </fieldset>
                                </div>
                                <div class="mb-3">
                                    <label for="comment" class="form-label fw-semibold">Your Review</label>
                                    <textarea class="form-control rounded-3" id="comment" name="comment" rows="4" 
                                              required maxlength="500" placeholder="Share your experience..."></textarea>
                                    <div class="form-text">Maximum 500 characters</div>
                                </div>
                                <button type="submit" class="btn btn-dark w-100 rounded-pill py-2">
                                    <i class="fas fa-paper-plane me-2"></i>Submit Review
                                </button>
                            </form>
                        <% } else { %>
                            <div class="alert alert-warning border-0 rounded-3">
                                <i class="fas fa-info-circle me-2"></i>
                                You must <a href="/auth/login" class="alert-link">log in</a> to leave a review.
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Map Script -->
<script src="/javascript/map.js"></script>